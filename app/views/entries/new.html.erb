<div>
  <%= form_for @entry, :url => entry_path do |f| %>
    <table>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, :size => '60' %></td>
      </tr>
      <tr>
      <td colspan="2" align="center">
        <%= f.hidden_field :remined %>
        <%= f.submit %>
      </td>
    </table>
  <% end %>
</div>
