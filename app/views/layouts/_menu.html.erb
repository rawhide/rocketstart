<div class="navi"></div>

<% if current_user %>
  <div class='logout'>
    <%= current_user.name %> : <%= link_to 'Logout', logout_path %>
    <br />
    LAST:2011/08/31 10:00
  </div>
<% else %>
  <div class='login'>
    <%= form_tag session_path, :method => :post do %>
      <p>メールアドレス<br />
      <%= text_field_tag :email, '' ,:size => '30' %></p>
      <p>パスワード<br />
      <%= password_field_tag :password, '' ,:size => '30' %></p>
      <p><%= submit_tag 'Login' %></p>
      <p><%= link_to '新規登録', new_users_entry_path %>&nbsp;<%= link_to 'パスワードを忘れた方', new_remined_path %></p>
    <% end %>
  </div>
<% end %>

