<section class='entry'>
  <br />
  <p>メールアドレスを入力してください。確認メールが届きます。</p>
  <%= form_for @entry, :url => entry_path do |f| %>
    <center>
      <table>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, :size => '30' %></td>
          <td><%= f.submit '送信' %></td>
        </tr>
      </table>
      <%= f.hidden_field :remined %>
      <%= f.hidden_field :user_id %>
    </center>
  <% end %>
  <br />
  <br />
</section>
